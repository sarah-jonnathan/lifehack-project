<h2>Create a new lifehack</h2>

<form action="/lifehacks/create" method="post">

    <label>Title:
        <input type="text" value="{{lifehack.title}}" name="title">
    </label>
    <label>Description:
        <textarea name="description" cols="30" rows="4">{{lifehack.description}}</textarea>
    </label>
    {{!-- bonus let the user put more than one url --}}
    <label>:multimedia url:
        <input type="url" value="{{lifehack.embedMultimedia}}"  name="embedMultimedia"> 
    </label>
    

    <select name="tags"  multiple>
        {{#each lifehack.tags }}
            <option selected value="{{this._id}}">{{this.name}}</option>
        {{/each}}
        {{#each tagsNotSelected}}
            <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Create</button>
</form>