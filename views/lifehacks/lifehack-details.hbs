<div class="container-fluid content-row">
    <div class="row">
        <div class="col">
            <div class="card h-100">
                <h2 class="card-header">{{title}}</h2>
                <div class="card-body">
                    {{description}}
                </div>
                <div class="card-body">
                    <img src="{{embedMultimedia}}" alt="{{title}}" class="w-100">
                </div>
                <div class="card-body btm-lh-display w-100">
                    <div class="btm-item">
                        <a href="#" class="likes">
                            <span class="badge">{{likes}}</span>
                        </a>
                    </div>
                    <div class="btm-item">
                        {{#each tags}}
                            <span><a href="/tags/{{this._id}}" class="tags"># {{this.name}}</a></span>
                        {{/each}}
                    </div>
                    <div class="btm-item align-r">
                        <h6 class="grey">Submitted by: {{author.username}}</h6>
                        {{#equalOrTrue userDetails._id author._id userDetails.isAdmin}}
                            <a href="/lifehacks/{{this._id}}/edit" class="btn edit">Edit</a>
                            <form action="/lifehacks/{{this._id}}/delete" method="POST">
                                <button class="btn delete">Delete</button>
                            </form>
                        {{/equalOrTrue}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>