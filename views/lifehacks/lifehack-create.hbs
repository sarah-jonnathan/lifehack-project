<h2>Create a new lifehack</h2>

<form action="/lifehacks/create" method="post" enctype="multipart/form-data">
    <label>Title:
        <input type="text" name="title">
    </label>
    <label>Description:
        <textarea name="description" cols="30" rows="4"></textarea>
    </label>
    {{!-- bonus let the user put more than one url --}}
    <label>:multimedia url:
        <input type="url" name="embedMultimedia"> 
    </label>
    <label>Upload an img:
        <input type="file" name="image01"> 
    </label>

    

    <select name="tags"  multiple>
        {{#each tagsArray }}
        <option value="{{this._id}}">{{this.name}}</option>
        {{/each}}
    </select>

    <button type="submit">Create</button>
</form>